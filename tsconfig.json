{
  "compilerOptions": {
    "target": "es2020", // Keep this to support optional chaining and other ES2020 features.
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react" // Change this to 'react' for compatibility.
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
